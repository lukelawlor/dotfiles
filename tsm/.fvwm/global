+	"PCManFM"	Exec pcmanfm-qt

AddToMenu GfxMenu
+	"Calendar"				$[infostore.calendarCmd]
+	"GNU Image Manipulation Program"	Exec gimp

AddToMenu AudioMenu
+	"Pavucontrol"		Exec pavucontrol
+	"Pulsemixer"		Exec termwin null pulsemixer
+	""			Nop
